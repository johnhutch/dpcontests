<!-- Consider adding an manifest.appcache: h5bp.com/d/Offline -->
<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">

  <!-- Use the .htaccess and remove these lines to avoid edge case issues.
       More info: h5bp.com/b/378 -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><%=t :site_name %></title>
  <meta name="description" content="Double Prime Contests">
  <meta name="author" content="John Hutchinson, Double Prime, Inc.">

  <!-- Mobile viewport optimized: j.mp/bplateviewport -->
  <meta name="viewport" content="width=device-width,initial-scale=1">

  <!-- Place favicon.ico and apple-touch-icon.png in the root directory: mathiasbynens.be/notes/touch-icons -->

  <!-- CSS: implied media=all -->
  <!-- CSS concatenated and minified via ant build script-->
  <%= stylesheet_link_tag    "application" %>
  <!-- end CSS-->

  <!-- All JavaScript at the bottom, except for Modernizr / Respond.
       Modernizr enables HTML5 elements & feature detects; Respond is a polyfill for min/max-width CSS3 Media Queries
       For optimal performance, use a custom Modernizr build: www.modernizr.com/download/ -->
  <script src="/modernizr-2.0.6.min.js"></script>
  <%= csrf_meta_tags %>
</head>

<body id="<%= action_name %>" class="<%= controller_name %>">
  <header class="navbar navbar-default navbar-static-top dpcontests-nav" id="top" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="../" class="navbar-brand">Double Prime Contests</a>
      </div>
      <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
        <ul class="nav navbar-nav">
          <% if user_signed_in? && (current_user.role? :admin) %>
            <li><%= link_to "User Admin", users_path %></li>
          <% end %>
          <% if user_signed_in? && ((current_user.role? :author) || (current_user.role? :uploader)) %>
            <li id="actions" class="actions dropdown">
              <a href="/contribute" id="contribute" class="contribute dropdown-toggle" data-toggle="dropdown" data-target="#">Contribute</a> 
              <ul class="dropdown-menu" role="menu" aria-labelledby="dlabel">
                <li><%= link_to "New blog post", new_post_path if current_user.role? :author %></li>
                <li><%= link_to "Upload a photo", photos_path if current_user.role? :uploader %></li>
              </ul>
            </li>
          <% end %>
          <li id="about" class="about dropdown">
            <a href="/about" class="dropdown-toggle" data-toggle="dropdown" data-target-"#">About</a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dlabel">
              <li><a href="">Copyright</a></li>
              <li><a href="">Privacy Policy</a></li>
              <li><a href="">Terms and Conditions</a></li>
            </ul>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li id="usernav" class="usernav dropdown">
            <% if user_signed_in? %>
              <%= link_to current_user.name, user_path(current_user), :id => "profile_dropdown", :class => "dropdown-toggle", :data => { :toggle => "dropdown", :target => "#" } %>
              <ul class="dropdown-menu" role="menu" aria-labelledby="dlabel"> 
                <li><%= link_to "Edit Profile", edit_user_registration_path %></li> 
                <li><%= link_to "Sign out", destroy_user_session_path, :method => "delete" %></li>
              </ul>
            <% else %>
              <%= link_to t("links.signup_signin"), new_user_session_path %></li>
            <% end %>
          </li>
        </ul>
      </nav>
    </div>
  </header>

  <main id="main" role="main">
    <% flash.each do |name, msg| %>
      <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
        <a class="close" data-dismiss="alert">x</a>
        <div class="container">
          <%= msg  %>
        </div>
      </div>
    <% end %>

    <% if @masthead %>
      <div class="masthead">
        <div class="container">
          <%= @masthead.html_safe %>
        </div>
      </div>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </main>

  <footer class="dpcontests-footer" role="contentinfo">
    <div class="container">
      <div class="credit">Built by Hutch.</a>
      <div class="info">
        <a class="btn btn-default github" href="https://github.com/johnhutch/dpcontests">View on Github.</a>
        <a class="btn btn-default issues"  href="mailto:jhutchinson@doubleprime.com">Report Issues.</a>
      </div>
    </div>
  </footer>

  <!-- JavaScript at the bottom for fast page loading -->
  <%= javascript_include_tag "application" %>
  <%= yield :scripts %>

  <% # analytics slows down capybara significantly -- removed from testing environment 
      unless Rails.env.test? %>
      <!-- Change UA-XXXXX-X to be your site's ID -->
      <script>
      window._gaq = [['_setAccount','UAXXXXXXXX1'],['_trackPageview'],['_trackPageLoadTime']];
      Modernizr.load({
          load: ('https:' == location.protocol ? '//ssl' : '//www') + '.google-analytics.com/ga.js'
      });
      </script>
  <% end %>

  <!-- Prompt IE 6 users to install Chrome Frame. Remove this if you want to support IE 6.
      chromium.org/developers/how-tos/chrome-frame-getting-started -->
  <!--[if lt IE 7 ]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
      <script>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
  <![endif]-->

  <!-- Â© <%=t :site_name %> <%= Time.now.year %> All Right Reserved. -->
</body>
</html>
